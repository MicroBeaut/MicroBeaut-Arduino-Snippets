{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Arduino",
	"patterns": [
		{
			"include": "#variable-qualifiers"
		},
		{
			"include": "#variable-utilities"
		},
		{
			"include": "#variable-constants"
		},
		{
			"include": "#function-digital-io"
		},
		{
			"include": "#function-analog-io"
		},
		{
			"include": "#function-other-family"
		},
		{
			"include": "#function-advanced-io"
		},
		{
			"include": "#function-time"
		},
		{
			"include": "#function-match"
		},
		{
			"include": "#function-trigonometry"
		},
		{
			"include": "#function-characters"
		},
		{
			"include": "#function-random-numbers"
		},
		{
			"include": "#function-bits-bytes"
		},
		{
			"include": "#function-external-interrupts"
		},
		{
			"include": "#function-interrupts"
		},
		{
			"include": "#function-communication"
		},
		{
			"include": "#function-usb"
		},
		{
			"include": "#variable-datatypes"
		},
		{
			"include": "#expression-operators"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"variable-qualifiers": {
			"patterns": [
				{
					"name": "storage.type.ino",
					"match": "\\b(const|scope|static|volatile)\\b"
				}
			]
		},
		"variable-utilities": {
			"patterns": [
				{
					"name": "storage.type.ino",
					"match": "\\b(PROGMEM|sizeof)\\b"
				}
			]
		},
		"variable-constants": {
			"patterns": [
				{
					"name": "constant.numeric.ino",
					"match": "\\b(HIGH|LOW|true|false)\\b"
				},
				{
					"name": "support.constant.digital.ino",
					"match": "\\b(INPUT|OUTPUT|INPUT_PULLUP|LED_BUILTIN)\\b"
				},
				{
					"name": "constant.numeric.ino",
					"match": "-?\\b((0(b|B)[0-1]*)|(0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f)?\\b"
				}
			]
		},
		"variable-datatypes": {
			"patterns": [
				{
					"name": "support.type.datatypes.ino",
					"match": "\\b(array|bool|boolean|byte|char|double|float|int|long|short|size_t|string|String|unsigned char|unsigned int|unsigned long|void|word)\\b"
				}
			]
		},
		"function-digital-io": {
			"patterns": [
				{
					"name": "keyword.control.digital.ino",
					"match": "\\b(digitalRead|digitalWrite|pinMode)\\b"
				}
			]
		},
		"function-analog-io": {
			"patterns": [
				{
					"name": "keyword.control.analog.ino",
					"match": "\\b(analogRead|analogWrite|analogReference)\\b"
				},
				{
					"name": "variable.parameter.function.analog.reference.ino",
					"match": "\\b(DEFAULT|EXTERNAL|INTERNAL|INTERNAL1V1|INTERNAL2V56)\\b"
				}
			]
		},
		"function-other-family": {
			"patterns": [
				{
					"name": "keyword.control.analog.resolution.ino",
					"match": "\\b(analogReadResolution|analogWriteResolution)\\b"
				}
			]
		},
		"function-advanced-io": {
			"patterns": [
				{
					"name": "keyword.control.advanced.ino",
					"match": "\\b(noTone|pulseIn|pulseInLong|shiftIn|shiftOut|tone)\\b"
				}
			]
		},
		"function-time": {
			"patterns": [
				{
					"name": "keyword.control.time.ino",
					"match": "\\b(delay|delayMicroseconds|micros|millis)\\b"
				}
			]
		},
		"function-match": {
			"patterns": [
				{
					"name": "keyword.control.math.ino",
					"match": "\\b(abs|constrain|map|max|min|pow|sq|sqrt)\\b"
				}
			]
		},
		"function-trigonometry": {
			"patterns": [
				{
					"name": "keyword.control.trigonometry.ino",
					"match": "\\b(cos|sin|tan)\\b"
				}
			]
		},
		"function-characters": {
			"patterns": [
				{
					"name": "keyword.control.characters.ino",
					"match": "\\b(isAlpha|isAlphaNumeric|isAscii|isControl|isDigit|isGraph|isHexadecimalDigit|isLowerCase|isPrintable|isPunct|isSpace|isUpperCase|isWhitespace)\\b"
				}
			]
		},
		"function-random-numbers": {
			"patterns": [
				{
					"name": "keyword.control.random.numbers.ino",
					"match": "\\b(random|randomSeed)\\b"
				}
			]
		},
		"function-bits-bytes": {
			"patterns": [
				{
					"name": "keyword.control.bits.bytes.ino",
					"match": "\\b(bit|bitClear|bitRead|bitSet|bitWrite|highByte|lowByte)\\b"
				}
			]
		},
		"function-external-interrupts": {
			"patterns": [
				{
					"name": "keyword.control.external.interrupts.ino",
					"match": "\\b(attachInterrupt|detachInterrupt)\\b"
				}
			]
		},
		"function-interrupts": {
			"patterns": [
				{
					"name": "keyword.control.interrupts.ino",
					"match": "\\b(interrupts|noInterrupts)\\b"
				}
			]
		},
		"function-communication": {
			"patterns": [
				{
					"name": "keyword.control.communication.ino",
					"match": "\\b(Serial|SPI|Stream|Wire)\\b"
				}
			]
		},
		"function-usb": {
			"patterns": [
				{
					"name": "keyword.control.usb.ino",
					"match": "\\b(Keyboard|Mouse)\\b"
				}
			]
		},
		"expression-operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.compound.ino",
					"match": "\\*=|/=|%=|\\+=|-=|\\?\\?="
				},
				{
					"name": "keyword.operator.assignment.compound.bitwise.ino",
					"match": "\\&=|\\^=|<<=|>>=|\\|="
				},
				{
					"name": "keyword.operator.bitwise.shift.ino",
					"match": "<<|>>"
				},
				{
					"name": "keyword.operator.comparison.ino",
					"match": "==|!="
				},
				{
					"name": "keyword.operator.relational.ino",
					"match": "<=|>=|<|>"
				},
				{
					"name": "keyword.operator.logical.ino",
					"match": "\\!|&&|\\|\\|"
				},
				{
					"name": "keyword.operator.bitwise.ino",
					"match": "\\&|~|\\^|\\|"
				},
				{
					"name": "keyword.operator.assignment.ino",
					"match": "\\="
				},
				{
					"name": "keyword.operator.decrement.ino",
					"match": "--"
				},
				{
					"name": "keyword.operator.increment.ino",
					"match": "\\+\\+"
				},
				{
					"name": "keyword.operator.arithmetic.ino",
					"match": "%|\\*|/|-|\\+"
				},
				{
					"name": "keyword.operator.null-coalescing.ino",
					"match": "\\?\\?"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ino",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ino",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ino"
}